<tr class={{trClass}}>
    {{#each columnKeys as |column| }}
        <th class="{{if (get sortableHash column) "sortable"}} {{get classesHash column}} {{simple-table-sorting-class sortingCriteria column}} {{thClass}}"
            onclick={{action "sortBy" column}}>

            {{#if hasBlock}}
                {{yield headerRow column}}
            {{else}}
                {{get headerRow column}}
            {{/if}}

        </th>
    {{/each}}
</tr>
