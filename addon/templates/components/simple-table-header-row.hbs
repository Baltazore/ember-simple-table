{{#each columnsArray as |columns| }}
    {{#if columns.hasMultipleColumns}}

        {{#each columns.items as |column|}}
            {{#if hasBlock}}
                {{yield (hash
                  name=column.name
                  sortable=(simple-table-sorting-enabled column)
                  sortingOrder=(simple-table-sorting-class sortingCriteria column.key)
                  sortAction=(action "sortBy" column.key)
                  )}}
            {{else}}
                {{#if (simple-table-sorting-enabled column)}}
                    <span class="sortable {{simple-table-sorting-class sortingCriteria column.key}}"
                          onclick={{action 'sortBy' column.key}}>
                        {{column.name}} <i class="sort-arrow"></i>
                    </span>
                {{else}}
                    <span> {{column.name}} </span>
                {{/if}}
            {{/if}}
        {{/each}}

    {{else}}

        {{#with columns.items as |column| }}
            {{#if hasBlock}}
                {{yield (hash
                  name=column.name
                  sortable=(simple-table-sorting-enabled column)
                  sortingOrder=(simple-table-sorting-class sortingCriteria column.key)
                  sortAction=(action "sortBy" column.key)
                  )}}
            {{else}}
                {{#if (simple-table-sorting-enabled column)}}
                    <span class="sortable {{simple-table-sorting-class sortingCriteria column.key}}"
                          onclick={{action 'sortBy' column.key}}>
                        {{column.name}} <i class="sort-arrow"></i>
                    </span>
                {{else}}
                    <span> {{column.name}} </span>
                {{/if}}
            {{/if}}
        {{/with}}

    {{/if}}
{{/each}}
