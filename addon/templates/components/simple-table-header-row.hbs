{{#if hasBlock}}
    <tr class={{trClass}}>
        {{#each columnKeys as |column| }}
            <th class="{{if (get sortableHash column) "sortable"}}
                       {{get classesHash column}}
                       {{simple-table-sorting-class sortingCriteria column}}
                       {{thClass}}"
                onclick={{action "sortBy" column}}>

                {{yield headerRow column}}
            </th>
        {{/each}}
    </tr>
{{else}}
    <tr class={{trClass}}>
        {{#each columnKeys as |column| }}
            <th class="{{if (get sortableHash column) "sortable"}}
                       {{get classesHash column}}
                       {{simple-table-sorting-class sortingCriteria column}}
                       {{thClass}}"
                onclick={{action "sortBy" column}}>

                {{get (get headerRow column) "columns"}}
            </th>
        {{/each}}
    </tr>
{{/if}}
