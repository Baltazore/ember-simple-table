{{#if hasBlock}}
    {{yield (hash
      cell=(component "simple-table-cell"
                row=headerRow
                dataKey=column
                sortingCriteria=sortingCriteria
                sortAction=(action "sortBy")
            )
      )}}
{{else}}
    <tr>
        {{#each columnKeys as |column| }}
            {{simple-table-cell
              row=headerRow
              dataKey=column
              sortingOrder=(simple-table-sorting-class sortingCriteria column)
              sortAction=(action "sortBy")
            }}
        {{/each}}
    </tr>
{{/if}}
