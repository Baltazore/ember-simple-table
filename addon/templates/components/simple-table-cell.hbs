{{#if columns.hasMultipleColumns}}
  {{#each columns.items as |column|}}
    {{simple-table-cell-item column=column criteria=sortingCriteria sortAction=(action "sortBy")}}
  {{/each}}
{{else}}
  {{#with columns.items as |column| }}
    {{simple-table-cell-item column=column criteria=sortingCriteria sortAction=(action "sortBy")}}
  {{/with}}
{{/if}}
